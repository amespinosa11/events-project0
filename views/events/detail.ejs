<%- include ('../header') %>
<div class="d-flex flex-column justify-content-center align-items-center w-100 h-100 mt-5 mb-2">
    <h3>Evento</h3>
    <form class="mt-4 w-50">
        <div class="row my-2">
            <div class="col">
                <input type="text" class="form-control" placeholder="nombre">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="lugar">
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                <input type="text" class="form-control" placeholder="direccion">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="fecha inicio">
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                <input type="text" class="form-control" placeholder="fecha fin">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="fecha creacion">
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                <input type="text" class="form-control" placeholder="presencial">
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="categoria">
            </div>
        </div>
        <button type="submit" class="btn btn-success my-2">Guardar cambios</button>
    </form>
</div>  
<%- include ('../footer') %>